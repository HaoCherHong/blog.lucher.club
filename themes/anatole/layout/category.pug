extends partial/layout

block def_site_title
    - var siteTitle = page.category + " · " + config.title

block def_description
    - var description = `${__('Categories')}：${page.category} - ${config.title}`;

block content
  .autopagerize_page_element: .content
    .archive.animated.fadeInDown
      ul.list-with-title
        include mixins
        +postList()
        +make_pager(__('prev'), __('next'))
