.sidebar.animated.fadeInDown
  .logo-title
    .title
      img(class="logo-img", src= url_for(config.logo), style="width:127px;", alt=config.username)
      h3(title="")
        a(href="/")= config.title
      if config.slogan
        .description
          p= config.slogan
      if config.description
        .description
          p !{config.description}

  ul.social-links
    if theme.twitter
      li
        a(href="https://twitter.com/" + theme.twitter)
          i.fa.fa-twitter
    if theme.instagram
      li
        a(href="https://instagram.com/" + theme.instagram)
          i.fa.fa-instagram
    if theme.weibo
      li
        a(href="https://weibo.com/" + theme.weibo)
          i.fa.fa-weibo
    if theme.facebook
      li
        a(href="https://facebook.com/" + theme.facebook)
          i.fa.fa-facebook
    if theme.github
      li
        a(href="https://github.com/" + theme.github)
          i.fa.fa-github
    if theme.linkedin
      li
        a(href="https://www.linkedin.com/in/" + theme.linkedin)
          i.fa.fa-linkedin-square
    if theme.rss
      li
        a(href= url_for(theme.rss))
          i.fa.fa-rss
  include footer
